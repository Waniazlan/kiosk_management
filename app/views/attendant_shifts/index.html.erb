<h1>Attendant shift</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>User</th>
      <th>Created at</th>
      <th>Update at</th>
      <th>Time in at</th>
      <th>Time out</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% if @user.present? %>
       <% @user.each_with_index do |u, index| %>
        <tr>
          <td><%= index + 1 %></td> 
          <td><%= u.email %></td>
          <td><%= u.created_at.strftime("%B %d, %Y %H:%M") %></td> 
          <td><%= u.updated_at.strftime("%B %d, %Y %H:%M") %></td> 
          <td><%= u.time_in %></td> 
          <td><%= u.time_out %></td> 
          <td>
            <%= link_to "Show", attendant_shift_path(u.id), class: "btn btn-primary btn-sm"%> 
          </td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan="7">No user found.</td>
      </tr>
    <% end %>
  </tbody>
</table>

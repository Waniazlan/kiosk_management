<p style="color: green;">
  <%= notice %>
</p>

<div class="container">
  <!-- User Details Card -->
  <div id="<%= dom_id(@user) %>" class="card p-3 mb-3">
    <h3 class="card-title mb-3">User Details</h3>

    <div class="mb-3">
      <p class="mb-1">
        <strong>Email:</strong>
        <%= @user.email %>
      </p>
    </div>
  </div>

  <!-- Attendance Shifts Section -->
  <h3 class="card-title mb-3">Attendance Shifts</h3>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Time In</th>
        <th>Time Out</th>
        <th>Duration</th>
        <th>Kiost</th>
      </tr>
    </thead>
    <tbody>
      <% if @user.present? %>
        <tr>
          <td><%= @user.time_in %></td>
          <td><%= @user.time_out %></td>
          <td><%= @user.duration %></td>
          <td>Kiost</td>
        </tr>
      <% else %>
        <tr>
          <td colspan="5">No shifts found for this user.</td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <!-- Back Button -->
  <div class="mt-3" style="display: flex;">
    <%= link_to "Back to kiosks", attendant_shifts_path, class: "btn btn-secondary btn-sm" %>
  </div>
</div>

<p style="color: green;">
  <%= notice %>
</p>

<div class="container">
  <!-- User Details Card -->
  <div id="<%= dom_id(@user) %>" class="card p-3 mb-3">
    <h3 class="card-title mb-3">User Details</h3>

    <div class="mb-3">
      <p class="mb-1">
        <strong>Email:</strong>
        <%= @user.email %>
      </p>
    </div>
  </div>

  <!-- Attendance Shifts Section -->
  <h3 class="card-title mb-3">Attendance Shifts</h3>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Kiosk</th>
        <th>Time In</th>
        <th>Time Out</th>
      </tr>
    </thead>
    <tbody>
      <% if @attendances.present? %>
        <% @attendances.each do |attendance| %>
          <tr>
            <td><%= attendance.kiosk.name %></td>
            <td><%= attendance.checked_in_at|| 'N/A' %></td>
            <td><%= attendance.checked_out_at|| 'N/A' %></td>
          </tr>
        <% end %>
      <% else %>
        <tr>
          <td colspan="4">No shifts found for this user.</td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <!-- Back Button -->
  <div class="mt-3" style="display: flex;">
    <%= link_to "Back to kiosks", attendant_shifts_path, class: "btn btn-secondary btn-sm" %>
  </div>
</div>

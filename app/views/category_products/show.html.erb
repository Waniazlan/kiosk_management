<p style="color: green"><%= notice %></p>
<div class="container">
  <div id="<%= dom_id (@category_product) %>" class="card p-3 mb-3">
    <h3 class="card-title mb-3">category product Details</h3>

    <div class="mb-3">
      <p class="mb-1">
        <strong>Name:</strong>
        <%= @category_product.name %>
      </p>
    </div>
  </div>

<div class="mt-3" style="display: flex;">
  <%= link_to "Edit this category_product", edit_category_product_path(@category_product), class: "btn btn-warning btn-sm" %>
  <%= link_to "Back to category products", category_products_path, class: "btn btn-secondary btn-sm" %>
  <%= button_to "Destroy this category_product", @category_product, method: :delete, class: "btn btn-danger btn-sm", data: { confirm: "Are you sure you want to delete this?" } %>
</div>
</div>

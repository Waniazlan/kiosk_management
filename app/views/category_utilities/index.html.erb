<p style="color: green"><%= notice %></p>

<% content_for :title, "Category utility" %>

<h1>
  <span>category utility List</span>
</h1>

<%= form_with url: category_utilities_path, method: :get, class: "mb-3", local: true do %>
  <div class="row align-items-center">
    <!-- Search field -->
    <div class="col-md-4 mb-3 mb-md-0">
      <%= text_field_tag :search, params[:search], placeholder: "Search category utility", class: "form-control" %>
    </div>

    <!-- Search button -->
    <div class="col-md-2 mb-3 mb-md-0">
      <%= submit_tag "Search", class: "btn btn-secondary w-100" %>
    </div>

    <!-- Reset button -->
    <div class="col-md-2 mb-3 mb-md-0">
      <%= link_to "Reset", category_utilities_path, class: "btn btn-outline-secondary w-100" %>
    </div>

    <!-- new category_utility button -->
    <div class="col-md-2 mb-3 mb-md-0">
      <%= link_to "New category utility", new_category_utility_path, class: "btn btn-grad w-100" %>
    </div>
  </div>
<% end %>



<div id="category_utilities">
  <table class="table">
    <thead style="background-color: #a2e292; color: black;">
      <tr>
        <th>#</th>
        <th>Name</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @category_utilities.each_with_index do |category_utility, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= category_utility.name %></td>
          <td>
            <%= link_to "Show", category_utility , class: "btn btn-primary btn-sm"%> 
            <%= link_to "Edit", edit_category_utility_path(category_utility),  class: "btn btn-warning btn-sm" %> 
            <%= link_to "Delete", category_utility, method: :delete, data: { confirm: "Are you sure?" } , class: "btn btn-danger btn-sm"%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

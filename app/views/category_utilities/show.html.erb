<p style="color: green"><%= notice %></p>
<div class="container">
  <div id="<%= dom_id (@category_utility) %>" class="card p-3 mb-3">
    <h3 class="card-title mb-3">category utility Details</h3>

    <div class="mb-3">
      <p class="mb-1">
        <strong>Name:</strong>
        <%= @category_utility.name %>
      </p>
    </div>
  </div>

<div class="mt-3" style="display: flex;">
  <%= link_to "Edit this category_utility", edit_category_utility_path(@category_utility), class: "btn btn-warning btn-sm" %>
  <%= link_to "Back to category utilities", category_utilities_path, class: "btn btn-secondary btn-sm" %>
  <%= button_to "Destroy this category_utility", @category_utility, method: :delete, class: "btn btn-danger btn-sm", data: { confirm: "Are you sure you want to delete this?" } %>
</div>
</div>

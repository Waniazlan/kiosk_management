<div class="card p-3 mb-3">
  <h1 class="card-title mb-3"><%= @combo.name %></h1>
  
  <p class="lead">Price: <%= number_to_currency(@combo.price) %></p>

  <h2 class="mb-3">Products in this Combo:</h2>
  <ul class="list-group">
    <% @combo.products.each do |product| %>
      <li class="list-group-item">
        <%= product.name %> - <%= number_to_currency(product.priceperpack) %>
      </li>
    <% end %>
  </ul>
</div>
<div class="mt-3" style="display: flex;">
  <%= link_to "Back to combos list", combos_path, class: "btn btn-secondary btn-sm" %>
  <%= button_to "Destroy this combo", @combo, method: :delete, class: "btn btn-danger btn-sm", data: { confirm: "Are you sure you want to delete this combo?" } %>
</div>

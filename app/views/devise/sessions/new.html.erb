
    <div class="registration-form">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-icon">
                <h1> sini logo stg </h1>
                <span><i class="icon icon-user"></i></span>
            </div>
            <div class="form-group">
                
                <%= f.email_field :email, class: 'form-control item', placeholder: 'Enter Email' %>
            </div>
            <div class="form-group">
                
                <%= f.password_field :password, class: 'form-control item', placeholder: 'Enter Password' %>
            </div>
            <div class="form-group item-center "> 
                <%= f.submit 'Log In', class: 'btn btn-grad create-account' %>
            </div>
        <% end %>

        <div class="social-media">
            <h5>Create New Account?</h5>
            <div class="form-group">
                <%= submit_tag 'Sign Up', class: 'btn btn-grad create-account' %>
            </div>
        </div>
    </div>
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.15/jquery.mask.min.js"></script>
    <script src="assets/js/script.js"></script>
    <script>
        $(document).ready(function(){
            $('#birth-date').mask('00/00/0000');
            $('#phone-number').mask('0000-0000');
        })
    </script>

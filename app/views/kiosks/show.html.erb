<p style="color: green"><%= notice %></p>
<div class="container">
  <div id="<%= dom_id (@kiosk) %>" class="card p-3 mb-3">
    <h3 class="card-title mb-3">Kiosk Details</h3>

    <div class="mb-3">
      <p class="mb-1">
        <strong>Name:</strong>
        <%= @kiosk.name %>
      </p>
    </div>

    <div class="mb-3">
      <p class="mb-1">
        <strong>Location:</strong>
        <%= @kiosk.location %>
      </p>
    </div>

    <div class="mb-3">
      <p class="mb-1">
        <strong>Address:</strong>
        <%= @kiosk.address %>
      </p>
    </div>
  </div>

<div class="mt-3" style="display: flex;">
  <%= link_to "Edit this kiosk", edit_kiosk_path(@kiosk), class: "btn btn-warning btn-sm" %>
  <%= link_to "Back to kiosks", kiosks_path, class: "btn btn-secondary btn-sm" %>
  <%= button_to "Destroy this kiosk", @kiosk, method: :delete, class: "btn btn-danger btn-sm", data: { confirm: "Are you sure you want to delete this kiosk?" } %>
</div>
</div>

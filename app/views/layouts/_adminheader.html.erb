<!-- Sidebar -->
<div class="sidebar">
  <!-- Logo Section -->
  <div class="logo">
    <span class="brand-name">LokalitiesFood</span>
  </div>

  <!-- Navigation Links -->
<div class="nav-items">
  <%= link_to "<i class='bi bi-house-door'></i> Home".html_safe, admin_dashboard_path, class: "nav-item" %>
  <%= link_to "<i class='bi bi-shop'></i> Kiosk".html_safe, kiosks_path, class: "nav-item" %>
  <%= link_to "<i class='bi bi-person'></i> Attendant".html_safe, attendant_shifts_path, class: "nav-item" %>
  <!-- Product Section with Dropdown -->
  <div class="nav-item dropdown">
    <a
      href="#"
      class="nav-link dropdown-toggle"
      id="productDropdown"
      role="button"
      data-bs-toggle="dropdown"
      aria-expanded="false"
    >
      <i class="bi bi-box"></i> Product
    </a>
    <ul class="dropdown-menu" aria-labelledby="productDropdown">
      <li>
        <%= link_to "<i class='bi bi-list'></i> Product List".html_safe, products_path, class: "dropdown-item" %>
      </li>
      <li>
        <%= link_to "<i class='bi bi-boxes'></i> Category Product".html_safe, category_products_path, class: "dropdown-item" %>
      </li>
    </ul>
  </div>
  <%= link_to "<i class='bi bi-boxes'></i> Combo".html_safe, combos_path, class: "nav-item" %>
  <%= link_to "<i class='bi bi-person-lines-fill'></i> Supplier List".html_safe, suppliers_path, class: "dropdown-item" %>
  <%= link_to "<i class='bi bi-bar-chart-line'></i> Report".html_safe, class: "dropdown-item" %>
  <%= link_to "<i class='bi bi-diagram-3-fill'></i> Stock".html_safe, class: "dropdown-item" %>
    <!-- Utility Section with Dropdown -->
  <div class="nav-item dropdown">
    <a
      href="#"
      class="nav-link dropdown-toggle"
      id="UtilityDropdown"
      role="button"
      data-bs-toggle="dropdown"
      aria-expanded="false"
    >
      <i class="bi bi-box"></i> Utility
    </a>
    <ul class="dropdown-menu" aria-labelledby="UtilityDropdown">
      <li>
        <%= link_to "<i class='bi bi-list'></i> Utility List".html_safe, utilities_path, class: "dropdown-item" %>
      </li>
      <li>
        <%= link_to "<i class='bi bi-boxes'></i> Category Utility".html_safe, category_utilities_path, class: "dropdown-item" %>
      </li>
    </ul>
  </div>
</div>



  <!-- Logout Button -->
  <div class="form-group">
  <%= button_to "Sign out", destroy_admin_session_path, method: :delete, class: "btn btn-grad" %>
  </div>
</div>

<!-- Sidebar Toggle Button -->
<button class="sidebar-toggle">
  â˜°
</button>


<script>
document.addEventListener("DOMContentLoaded", () => {
  const sidebar = document.querySelector(".sidebar");
  const toggleButton = document.querySelector(".sidebar-toggle");

  // Ensure the toggleButton exists before adding the event listener
  if (toggleButton) {
    toggleButton.addEventListener("click", () => {
      sidebar.classList.toggle("active");
    });
  }
});
</script>
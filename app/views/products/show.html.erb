<p style="color: green"><%= notice %></p>

<%= render @product %>

<div class="mt-3" style="display: flex;">
  <%= link_to "Edit this product", edit_product_path(@product), class: "btn btn-warning btn-sm" %>
  <%= link_to "Back to products", products_path, class: "btn btn-secondary btn-sm" %>
  <%= button_to "Destroy this product", @product, method: :delete, class: "btn btn-danger btn-sm", data: { confirm: "Are you sure you want to delete this product?" } %>
</div>

<p style="color: green"><%= notice %></p>

<% content_for :title, "Suppliers" %>

<h1>
  <span>Supplier List</span>
</h1>

<%= form_with url: suppliers_path, method: :get, class: "mb-3", local: true do %>
  <div class="row align-items-center">
    <!-- Search field -->
    <div class="col-md-4 mb-3 mb-md-0">
      <%= text_field_tag :search, params[:search], placeholder: "Search Supplier", class: "form-control" %>
    </div>

    <!-- Search button -->
    <div class="col-md-2 mb-3 mb-md-0">
      <%= submit_tag "Search", class: "btn btn-secondary w-100" %>
    </div>

    <!-- Reset button -->
    <div class="col-md-2 mb-3 mb-md-0">
      <%= link_to "Reset", suppliers_path, class: "btn btn-outline-secondary w-100" %>
    </div>

    <!-- New supplier button -->
    <div class="col-md-2 mb-3 mb-md-0">
      <%= link_to "New supplier", new_supplier_path, class: "btn btn-grad w-100" %>
    </div>
  </div>
<% end %>



<div id="suppliers">
  <table class="table">
    <thead style="background-color: #a2e292; color: black;">
      <tr>
        <th>#</th>
        <th>Supplier Name</th>
        <th>Person In Charge</th>
        <th>Contact Number</th>
        <th>Address</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @suppliers.each_with_index do |supplier, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= supplier.supplier_name %></td>
          <td><%= supplier.person_in_charge %></td>
          <td><%= supplier.contact_number %></td>
          <td><%= supplier.address %></td>
          <td>
            <%= link_to "Show", supplier , class: "btn btn-primary btn-sm"%> 
            <%= link_to "Edit", edit_supplier_path(supplier),  class: "btn btn-warning btn-sm" %> 
            <%= link_to "Delete", supplier, method: :delete, data: { confirm: "Are you sure?" } , class: "btn btn-danger btn-sm"%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

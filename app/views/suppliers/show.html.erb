<p style="color: green"><%= notice %></p>
<div class="container">
  <div id="<%= dom_id (@supplier) %>" class="card p-3 mb-3">
    <h3 class="card-title mb-3">Supplier Details</h3>

    <div class="mb-3">
      <p class="mb-1">
        <strong>Supplier Name</strong>
        <%= @supplier.supplier_name %>
      </p>
    </div>

    <div class="mb-3">
      <p class="mb-1">
        <strong>Person in Charge</strong>
        <%= @supplier.person_in_charge %>
      </p>
    </div>

    <div class="mb-3">
      <p class="mb-1">
        <strong>Contact Number : </strong>
        <%= @supplier.contact_number %>
      </p>
    </div>

    <div class="mb-3">
      <p class="mb-1">
        <strong>Address</strong>
        <%= @supplier.address %>
      </p>
    </div> 
  </div>

<div class="mt-3" style="display: flex;">
  <%= link_to "Edit this supplier", edit_supplier_path(@supplier), class: "btn btn-warning btn-sm" %>
  <%= link_to "Back to suppliers", suppliers_path, class: "btn btn-secondary btn-sm" %>
  <%= button_to "Destroy this supplier", @supplier, method: :delete, class: "btn btn-danger btn-sm", data: { confirm: "Are you sure you want to delete this Supplier?" } %>
</div>
</div>

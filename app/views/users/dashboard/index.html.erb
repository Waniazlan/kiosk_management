<% if @kiosks.present? %>
<div class="container mt-5" >
<h1>Select Kiosks</h1>
  <div class="col-lg-3 col-md-6">
    <% @kiosks.each do |kiosk| %>
      <div class="card shadow ">
        <div class="card-body text-center ">
            <h5><%= kiosk.name %></h5>
            <div class="">
              <i class="bi bi-geo-alt" style="font-size: 16px; padding-right:5px  "></i>
              <p class=""><%= kiosk.location%></p>
            </div>  
            <%= link_to "Check in", utility_statuses_path , class: "btn btn btn-grad btn-sm"%>   
        </div> 
      </div>  
    <% end %>
  </div>
</div>
 
<% else %>
  <p>No kiosks found.</p>
<% end %>

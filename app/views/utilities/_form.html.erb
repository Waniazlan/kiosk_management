<%= form_with(model: utility) do |form| %>
  <% if utility.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(utility.errors.count, "error") %> prohibited this utility from being saved:</h2>

      <ul>
        <% utility.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, "Utility Name" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :quantityperset, "Quantity Per Set" %>
    <%= form.number_field :quantityperset %>
  </div>

  <div>
    <%= form.label :category_utility_id, "Select a Category" %>
    <%= form.collection_select :category_utility_id, CategoryUtility.all, :id, :name, prompt: "Select a category" %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

<div id="<%= dom_id utility %>" class="card p-3 mb-3">
  <h3 class="card-title mb-3">Utility Details</h3>

  <div class="mb-3">
    <p class="mb-1">
      <strong>Name:</strong>
      <%= utility.name %>
    </p>
  </div>

  <div class="mb-3">
    <p class="mb-1">
      <strong>Type:</strong>
      <%= utility.category_utility.name %>
    </p>
  </div>

  <div class="mb-3">
    <p class="mb-1">
      <strong>Quantity Per Set:</strong>
      <%= utility.quantityperset %>
    </p>
  </div>
</div>

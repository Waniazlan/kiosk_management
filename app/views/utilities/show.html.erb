<p style="color: green"><%= notice %></p>

<%= render @utility %>

<div class="mt-3" style="display: flex;">
  <%= link_to "Edit this utility", edit_utility_path(@utility), class: "btn btn-warning btn-sm" %>
  <%= link_to "Back to Utility List", utilities_path, class: "btn btn-secondary btn-sm" %>
  <%= button_to "Destroy this Utility", @utility, method: :delete, class: "btn btn-danger btn-sm", data: { confirm: "Are you sure you want to delete this Utility?" } %>
</div>